        "ref_type": {
          "viewClass": "SelectView",
          "prompt": "Ref Type",
          "label": "Ref Type",
          "model": {
            "item": "item",
            "task": "task",
            "admin": "file",
            "regular": "conversation",
            "light": "profile",
            "guest": "app"
          }
        },
        "query": {
          "viewClass": "TextFieldView",
          "label": "query",
