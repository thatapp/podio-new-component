        "highlights": {
          "viewClass": "SelectView",
          "label": "highlights",
          "model": {
            "true": "true",
            "false": "false"
          }
        },
        "limit": {
          "viewClass": "TextFieldView",
          "label": "Limit",
          "placeholder": "100"
