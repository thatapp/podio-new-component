{
  "title": "Podio powered by Techego",
  "description": "Podio",
  "credentials": {
    "fields":{
      "oauth":{
        "label": "Authentication",
        "viewClass": "OAuthFieldView",
        "required": true
      }
    },
    "oauth2":{
      "client_id": "{{PODIO_APP_ID}}",
      "client_secret": "{{PODIO_APP_SECRET}}",
      "auth_uri": "https://podio.com/oauth/authorize",
      "token_uri": "https://podio.com/oauth/token"
    }
  },
  "actions": {
    "getItem": {
      "main": "./lib/actions/getItem.js",
      "title": "Get a Podio Item",
      "metadata": {
        "in": "./lib/schemas/getItem.in.json"
      }
    },
    "getApp": {
      "main": "./lib/actions/getApp.js",
      "title": "Get a Podio App",
      "metadata": {
        "in": "./lib/schemas/getApp.in.json"
      }
    },
    "getSpace": {
      "main": "./lib/actions/getSpace.js",
      "title": "Get a Podio Space",
      "metadata": {
        "in": "./lib/schemas/getSpace.in.json"
      }
    },
    "getFile": {
      "main": "./lib/actions/getFile.js",
      "title": "Get a Podio File",
      "metadata": {
        "in": "./lib/schemas/getFile.in.json"
      }
    },
    "getTask": {
      "main": "./lib/actions/getTask.js",
      "title": "Get a Podio Task",
      "metadata": {
        "in": "./lib/schemas/getTask.in.json"
      }
    },
    "getComment": {
      "main": "./lib/actions/getComment.js",
      "title": "Get a Podio Comment",
      "metadata": {
        "in": "./lib/schemas/getComment.in.json"
      }
    }
  },
  "triggers": {
    "getContacts": {
      "main": "./lib/triggers/getContacts.js",
      "title": "Get Contacts",
      "type" : "polling",
      "metadata": {
        "out": "./lib/schemas/getContacts.out.json"
      }
    }
  }
}